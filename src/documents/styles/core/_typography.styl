a
  color: $purple
  text-decoration: none
  p &,
  li &
    border-bottom: 1px dashed #777
    &:hover,
    &:active
      border-bottom: 1px solid $purple

  &:focus
    outline: thin dotted

  &:hover,
  &:active
    outline: 0
    color: darken($purple, 25%)

h1,
h2,
h3,
h4,
h5,
h6
  font-weight: 400

h1,
h2
  line-height: 1
  margin: 0 0 0.5em

h2
  font-size: 28px
  @media only screen and (max-width: 800px)
    font-size: 21px

h3
  font-size: 24px
  line-height: 1.2
  margin: 0 0 0.4em

abbr[title]
  border-bottom: 1px dotted #2b2b2b
  cursor: help

b,
strong
  font-weight: 700

p
  margin: 0 0 24px
  &:empty
    display: none

ul,
ol
  list-style: none
  margin: 0 0 20px
  padding-left: 25px

ul
  list-style: disc

ol
  list-style: decimal

li > ul,
li > ol
  margin: 0 0 0 20px
