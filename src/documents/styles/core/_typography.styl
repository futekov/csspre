a
  color: $purple
  text-decoration: none
  p &,
  li &
    border-bottom: 1px dashed #777
    &:hover,
    &:active
      border-bottom: 1px solid $purple

  &:focus
    outline: thin dotted

  &:hover,
  &:active
    outline: 0
    color: darken($purple, 25%)

h1,
h2,
h3
  font-weight: 300
  font-family: 'Roboto Slab', sans-serif

h1,
h2
  line-height: 1
  margin: 0 0 0.25em

h2
  font-size: 28px
  @media only screen and (max-width: 800px)
    font-size: 21px

h3
  font-size: 21px
  line-height: 1.2
  margin: 0 0 0.4em

b,
strong
  font-weight: 400

p
  margin: 0 0 24px
  max-width: 56em
  &:empty
    display: none

ul
  list-style: none
  margin: 0 0 20px
  padding-left: 25px

ul
  list-style: disc

li > ul
  margin: 0 0 0 20px
