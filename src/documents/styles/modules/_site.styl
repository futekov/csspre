html
  background-color: #b7b2ad
  padding: 0

header
  background: $purple
  text-align: center

.site
  background: #f6f7f8
  -transparent-bg(0.36)
  max-width: $site-width
  margin: 0 auto 20px
  padding: 6px 3.6% 1%
  position: relative

.site-title
  margin: 0
  font-size: 56px
  font-family: 'Iceland', sans-serif
  line-height: 1.1
  color: #eee
  @media screen and (max-width: 800px)
    font-size: 46px
  @media screen and (max-width: 660px)
    font-size: 30px
    text-align: left
    text-indent: 5px

.site-title a
  color: #eee
  &:hover
    color: #fff

.page-title
  font-size: 46px
  font-family: 'Iceland', sans-serif
  @media screen and (max-width: 800px)
    font-size: 38px
