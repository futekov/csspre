.tile
  -transparent-bg()
  padding: 0 1em .6em
  display: block
  color: #333
  font-size: 14px
  background-color: #eee
  -webkit-transition: all 300ms cubic-bezier(0.500, -1.000, 0.500, 2.000)
  transition: all 300ms cubic-bezier(0.500, -1.000, 0.500, 2.000)

  h3
    margin-bottom: 0
    line-height: 1.4
    margin: 0 (-@font-size) .2em
    padding: 0 @font-size
    background: $purple
    color: #fff

  &:hover,
  &:focus,
  &:active
    color: #000
    background-color: #fff
    transform: scale(1.12)

    h3
      background: darken($purple, 10%)

  time
    color: #aaa
    font-size: 13px
    margin-bottom: 0.8em
